#random numbers 
import random 
print (random.randrange(1,10))


#concatenation 
a = "Hello"
b = "Patricia"
c = a +" "+ b
print (c)

# string format
age = "36"
txt = "My name is Patricia, I am "+ age
print (txt)

#escape characters
#to insert characters that are illegal in a string, use an escape character, in this case \
#text = "We are fabulous" Unicorn "from amazingland" WRONG
text = "We are fabulous\"Unicorns\"from amazingland"
print (text)
